func _get_message() -> String:
	return get_peer(1).get_packet().get_string_from_utf8().strip_edges()

func _send_message(text: String) -> int:
	return get_peer(1).put_packet(text.to_utf8())

func _set_text_write_mode() -> void:
	get_peer(1).set_write_mode(WebSocketPeer.WRITE_MODE_TEXT)

